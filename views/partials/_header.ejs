<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
      <div>
       <% if (username) { %>
        <form method="POST" action="/logout" class="form-inline" style="margin-right: 4px">
          <h5>Logged in a <%=username%></h5>
          <button type ="submit" class="btn btn-secondary active" style="margin-left: 10px"> Logout</button>  
      </form>
        <% } else { %> 
      <form method ="POST" action="/login">
        <div class="input-group">
            <input type="text" name="username" class="form-control rounded" style="width: 300px" placeholder="Please login with your username" aria-label="Search"/>
            <button type="submit" class="btn btn-secondary active">Login</button>
      </div>
      </form>
        <% } %>
    </div>
  </nav>
</header>